# ============================================
# Configuratix Environment Variables
# ============================================
# Copy this file to .env and update values
# Both backend and frontend read from this file

# ============================================
# DATABASE
# ============================================
# PostgreSQL connection string
DATABASE_URL=postgres://postgres:postgres@localhost:5432/configuratix?sslmode=disable

# ============================================
# BACKEND
# ============================================
# Port for the backend API server
PORT=8080

# JWT secret for authentication tokens (change this in production!)
JWT_SECRET=your-super-secret-jwt-key-change-me

# CORS allowed origins (comma-separated, or * for all)
# For production, set to your frontend domain
CORS_ALLOWED_ORIGINS=*

# ============================================
# FRONTEND
# ============================================
# Backend API URL - frontend uses this to connect to backend
# This is also used to generate the agent install command
#
# Examples:
#   Local:      http://localhost:8080
#   Production: http://138.124.79.81:8080
#   With domain: https://api.yourdomain.com
#
NEXT_PUBLIC_API_URL=http://localhost:8080
